@using GSL.Web.Enuns
@model GSL.Web.Models.ProductModel


@*Dummy*@
@{    
    var categories = new List<SelectListItem>();
    categories.Add(new SelectListItem() { Text = "Eletro" });
    categories.Add(new SelectListItem() { Text = "Moveis" });
    categories.Add(new SelectListItem() { Text = "Telefonia" });
}

@{    
    var customers = new List<SelectListItem>();
    customers.Add(new SelectListItem() { Text = "Alfa" });
    customers.Add(new SelectListItem() { Text = "Beta" });
    customers.Add(new SelectListItem() { Text = "Delta" });
}

<form asp-action="ProductCreate">
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Novo Produto</h1>

        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;">Produto</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;">Categoria</label>
            </div>
            <div class="col-10 pb-3">
                @Html.DropDownList("CategoryName", categories, "Selecione...",new { @class = "form-control", @style="margin-top: 3px;" })
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;">Descrição</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Customer" class="control-label pt-2" style="font-size:20px;">Cliente</label>
            </div>
            <div class="col-10 pb-3">
                @Html.DropDownList("Customer", customers, "Selecione...",new { @class = "form-control", @style="margin-top: 3px;" })
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;">Preço</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Stock" class="control-label pt-2" style="font-size:20px;">Estoque</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Voltar</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Criar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}