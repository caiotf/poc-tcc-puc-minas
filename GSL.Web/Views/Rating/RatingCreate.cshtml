@model GSL.Web.Models.RatingModel
@using GSL.Web.Enuns

@{
    ViewData["Title"] = "RatingCreate";
}

<h4>Avaliar transportadora</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RatingCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AgilidadeNaEntrega" class="control-label">Agilidade na entrega</label>
                @Html.DropDownList("AgilidadeNaEntrega", Html.GetEnumSelectList<ERating>(), "Selecione...",new { @class = "form-control", @style="margin-top: 3px;"})
                <span asp-validation-for="AgilidadeNaEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoaComunicacao" class="control-label" style="margin-top: 10px;">Comunicação</label>
                @Html.DropDownList("BoaComunicacao", Html.GetEnumSelectList<ERating>(), "Selecione...",new { @class = "form-control", @style="margin-top: 3px;" })
                <span asp-validation-for="BoaComunicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuidadoComMercadoria" class="control-label" style="margin-top: 10px;">Cuidado com a mercadoria</label>
                @Html.DropDownList("CuidadoComMercadoria", Html.GetEnumSelectList<ERating>(), "Selecione...",new { @class = "form-control", @style="margin-top: 3px;" })
                <span asp-validation-for="CuidadoComMercadoria" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Avaliar" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
